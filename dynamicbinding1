#include <iostream>
using namespace std;
class Base
{
    public:
   virtual void show()
    {
        cout<<" In Base \n";
    }
};
class Derived : public Base
{
    public:
    void show()
    {
        cout << "Derived class is derived from the base class." ;
    }
};
int main()
{
    Base *bptr;
    //Base b;
    Derived d;
    bptr = &d;
    bptr->show();
    return 0;
}
